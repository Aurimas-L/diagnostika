<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".koduTikrinimas.PaieskaRezultatai">

    <TextView
        android:id="@+id/textKodasPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Kodo pavadinimas"
        android:textColor="@color/black"
        android:textSize="46px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/textArIeskotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Šis kodas ieškotas: "
        android:textColor="@color/design_default_color_error"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textKodasPavadinimas"  />

    <TextView
        android:id="@+id/textKritiskumasPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kodo kritiškumas:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textArIeskotas" />


    <TextView
        android:id="@+id/textKritiskumasAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="kritiškumo aprašymas"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textKritiskumasPavadinimas" />

    <TextView
        android:id="@+id/textKodasAprasymasPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bendra kodo informacija:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textKritiskumasAprasymas" />


    <TextView
        android:id="@+id/textKodasAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="trumpas aprašymas"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textKodasAprasymasPavadinimas" />

    <TextView
        android:id="@+id/textGedimoPriezastisPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dažniausios priežąstys:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textKodasAprasymas" />


    <TextView
        android:id="@+id/textGedimoPriezastisAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"

        android:text="priežąsčių aprašymas"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textGedimoPriezastisPavadinimas" />

    <TextView
        android:id="@+id/textTvarkymoPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galimi tvarkymo būdai:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@id/textGedimoPriezastisAprasymas" />

    <TextView
        android:id="@+id/textTvarkymoAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="tvarkymas"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textTvarkymoPavadinimas" />

    <TextView
        android:id="@+id/textSusijeGedimaiPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Susiję gedimų kodai:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textTvarkymoAprasymas" />

    <TextView
        android:id="@+id/textSusijeGedimaiAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="kas gali but susije"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textSusijeGedimaiPavadinimas" />


    <TextView
        android:id="@+id/textSusijeGedimuKodaiPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Susiję gedimų kodai:"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textSusijeGedimaiAprasymas" />


    <LinearLayout
        android:id="@+id/listViewSusijeKodai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSusijeGedimuKodaiPavadinimas"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/textKainaPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apytikslė tvarkymo kaina:"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="36px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/listViewSusijeKodai" />

    <TextView
        android:id="@+id/textKainaAprasymas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="apytikslė kaina aprašymas"
        android:textColor="@color/black"
        android:textSize="36px"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        app:layout_constraintTop_toBottomOf="@+id/textKainaPavadinimas" />

    <TextView
        android:id="@+id/textInformacijaAtnaujinta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kodo informacija atnaujinta: "
        android:textColor="@color/black"
        android:textSize="36px"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textKainaAprasymas"
        app:layout_constraintStart_toStartOf="@id/textKodasPavadinimas"
        />




</androidx.constraintlayout.widget.ConstraintLayout>