<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textPaskyraPavadinimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paskyra"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

        <TextView
        android:id="@+id/textPaskyraVardas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vardas: "
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textPaskyraPavadinimas"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textPaskyraPrisijungimas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prisijungimas: "
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textPaskyraVardas"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textPaskyraELPastas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El paštas: "
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textPaskyraPrisijungimas"
        app:layout_constraintStart_toStartOf="parent"
        />



    <Button
        android:id="@+id/buttonAtsijungti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atsijungti"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/buttonPakeistiSlaptazodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pakeisti Slaptažodį"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPaskyraELPastas"
        />
    <Button
        android:id="@+id/buttonPakeistiElPasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pakeisti El. paštą"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPakeistiSlaptazodi"
        />
    <Button
        android:id="@+id/buttonIstrintiPaskyra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ištrinti paskyrą"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPakeistiElPasta"
        />



</androidx.constraintlayout.widget.ConstraintLayout>